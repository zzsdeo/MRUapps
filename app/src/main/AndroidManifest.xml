<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="ru.zzsdeo.mruapps">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme">

        <!--activities******************************************************************-->

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".IgnoredAppsActivity"
            android:label="@string/ignored_list" />

        <!--providers******************************************************************-->

        <provider
            android:authorities="ru.zzsdeo.mruapps.contentprovider"
            android:name=".DBContentProvider"
            android:exported="true">
        </provider>

        <!--receivers******************************************************************-->

        <receiver
            android:name=".Widget"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name">
            <intent-filter>
                <action
                    android:name="android.appwidget.action.APPWIDGET_UPDATE">
                </action>
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_metadata">
            </meta-data>
        </receiver>

        <!--services******************************************************************-->

        <service
            android:name=".WidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS">
        </service>

        <service
            android:name=".DBUpdateIntentService">
        </service>
    </application>

</manifest>
